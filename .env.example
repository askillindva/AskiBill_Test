# AskiBill Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/askibill
PGHOST=localhost
PGPORT=5432
PGUSER=askibill_user
PGPASSWORD=your_secure_password
PGDATABASE=askibill

# For development with Neon (current setup)
# DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/askibill?sslmode=require

# =============================================================================
# AUTHENTICATION & SESSION
# =============================================================================
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SECRET_KEY=your-jwt-secret-key-min-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Replit Authentication (automatically provided in Replit environment)
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-app.replit.dev

# =============================================================================
# BANKING API CONFIGURATION
# =============================================================================
# Setu API (Account Aggregator)
SETU_API_KEY=your-setu-api-key
SETU_BASE_URL=https://sandbox.setu.co
SETU_CLIENT_ID=your-setu-client-id
SETU_CLIENT_SECRET=your-setu-client-secret

# Yodlee API
YODLEE_CLIENT_ID=your-yodlee-client-id
YODLEE_CLIENT_SECRET=your-yodlee-client-secret
YODLEE_BASE_URL=https://sandbox.api.yodlee.com/ysl

# Anumati API
ANUMATI_API_KEY=your-anumati-api-key
ANUMATI_BASE_URL=https://sandbox.anumati.com

# Bank API General
BANK_API_TIMEOUT=30
BANK_API_RETRY_COUNT=3

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Service (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@askibill.com

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# ENCRYPTION & SECURITY
# =============================================================================
# Data Encryption Key (32 bytes, base64 encoded)
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded
CRYPTO_ALGORITHM=AES-256-GCM

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# AWS S3 (Optional for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=askibill-uploads
AWS_S3_REGION=us-east-1

# =============================================================================
# MOBILE PUSH NOTIFICATIONS
# =============================================================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Apple Push Notification Service
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_PRIVATE_KEY_PATH=path/to/apns-private-key.p8

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database (separate from main database)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/askibill_test

# API Documentation
ENABLE_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc

# =============================================================================
# PYTHON BACKEND SPECIFIC (for FastAPI migration)
# =============================================================================
# Python Database URL (for SQLAlchemy async)
PYTHON_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/askibill

# Uvicorn Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_WORKERS=1
UVICORN_RELOAD=true

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose overrides
POSTGRES_DB=askibill
POSTGRES_USER=askibill_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379